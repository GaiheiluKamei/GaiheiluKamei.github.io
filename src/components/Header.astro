---
import { Image } from 'astro:assets'
import logo from '../assets/logo.png'
---
<header>
    <a href="/">
        <Image src={logo} alt="logo" width="64" height="64"/>
    </a>
</header>
<style>
    header {
        color: #fff;
        min-height: 4rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    header a {
        height: 64px;
    }
</style>